<%- include('./partials/header.ejs') %> <%- include('./partials/nav.ejs') %>



<div class="main-section">
  <% if(posts.length) { %>
  <div class="main-container">
    <h1 class="page-title">All posts</h1>
    <p class="page-text">
      Lorem ipsum dolor, sit amet consectetur adipisicing elit. Asperiores
      voluptas quod, ducimus dolorum architecto in, laboriosam quos totam soluta
      fugiat, a illum quibusdam minus.
    </p>

    <div class="posts-section">
      <% if(posts.length) {%> 
        <%posts.forEach((post) => { %>
      <div id="id_<%= post._id %>" class="post-block">
        <h3><%= post.author %></h3>
        <p class="page-text"><%= post.title %></p>
        <ul>
          <li><a href="/edit-post/<%= post._id %>">Edit</a></li>
          <li><a class="confirmDeletion" href="" data-id="<%= post._id %>">Delete</a></li>
        </ul>

        </div>
      <% })}; %>
    </div>




  </div>
  <%} else{%>
    <div class="main-container">
      <h1 class="page-title">There are no posts yet!</h1>
    </div>
  <%}%>
</div>







<script>
  document.addEventListener("click", (e) => {
    const id = e.target?.dataset?.id || null;
    if (id) {
      fetch(`/posts/${id}`, {
        method: "DELETE",
      }).then(() => {
        window.location.reload();
      });
    }
  });
</script>

